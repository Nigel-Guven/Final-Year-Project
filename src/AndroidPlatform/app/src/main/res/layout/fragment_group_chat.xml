<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear_layout_divider2"
        android:layout_alignParentTop="true"
        android:layout_height="3dp"
        android:background="@color/cobalt_blue"
        android:orientation="horizontal"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/linear_layout_divider2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_view_groups"
        android:layout_above="@id/linear_layout_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear_layout_divider"
        android:layout_height="3dp"
        android:background="@color/cobalt_blue"

        android:layout_above="@+id/floatingActionButton1"
        android:orientation="horizontal" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="72dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:src="@android:drawable/ic_input_add"
        tools:visibility="visible" />
</RelativeLayout>
